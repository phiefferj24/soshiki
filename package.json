{
    "private": true,
    "name": "soshiki",
    "workspaces": [
        "site",
        "packages/**/*",
        "proxy",
        "packages",
        "database",
        "updater",
        "api",
        "types",
        "manifest",
        "discord",
        "graphql",
        "database-new",
        "api-new",
        "bot",
        "notifications"
    ],
    "scripts": {
        "site:dev": "yarn workspace soshiki-site dev",
        "site:dev:open": "yarn workspace soshiki-site dev --open",
        "site": "yarn workspace soshiki-site build && yarn workspace soshiki-site preview",
        "site:open": "yarn workspace soshiki-site build && yarn workspace soshiki-site preview --open",
        "site:war": "yarn workspace soshiki-site build && yarn workspace soshiki-site preview:war",
        "site:war:open": "yarn workspace soshiki-site build && yarn workspace soshiki-site preview:war --open",
        "site:sync": "yarn workspace soshiki-site sync",
        "proxy": "yarn workspace soshiki-proxy start",
        "proxy:dev": "yarn workspace soshiki-proxy start:dev",
        "api": "yarn workspace soshiki-api start",
        "api:dev": "yarn workspace soshiki-api dev",
        "updater": "yarn workspace soshiki-updater start",
        "updater:dev": "yarn workspace soshiki-updater dev",
        "graphql": "yarn workspace soshiki-graphql start",
        "graphql:dev": "yarn workspace soshiki-graphql dev",
        "api-new": "yarn workspace soshiki-api-new start",
        "bot": "yarn workspace soshiki-bot start",
        "notifications": "yarn workspace soshiki-notifications start"
    },
    "packageManager": "yarn@3.2.1",
    "dependencies": {
        "typescript": "^4.8.3"
    },
    "devDependencies": {
        "ts-node": "^10.9.1"
    }
}
