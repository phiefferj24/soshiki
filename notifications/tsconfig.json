{
	"compilerOptions": {
		"declaration": true,
		"forceConsistentCasingInFileNames": true,
		"lib": ["ES2020"],
		"module": "ESNext",
		"moduleResolution": "NodeNext",
		"outDir": "dist/",
		"resolveJsonModule": true,
		"rootDir": "src/",
		"target": "ESNext",
		"downlevelIteration": true,
		"esModuleInterop": true,
		"strictNullChecks": true,
		"noImplicitAny": true
	},
	"exclude": ["dist/"],
	"include": ["src/"]
}